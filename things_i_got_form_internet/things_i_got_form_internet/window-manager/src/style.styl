bBlue = #0056b3
lbBlue = #2f9fd0
gGray = #666666
lgGray = #e4e4e4

body
  overflow overlay
  
.toolbar
  position fixed
  bottom 0
  left 0
  right 0
  padding .25em
  background-color lgGray
  border-top 1px solid gGray
  display flex
  flex-direction row
  gap .25em
  
  .apps
    flex 1 1 auto
    border-right 1px solid gGray
    padding .5em
    margin-right .5em
    
    img
      cursor pointer
      width 24px
      height 24px
        
  .dock
    flex 4 1 auto
    display flex
    flex-direction row
    gap .25em
    font-family Arial, sans-serif
    
    .item
      flex 1 1 auto
      display flex
      flex-direction row
      justify-content flex-start
      align-items center
      background-color lgGray
      border 1px solid lightness(gGray, 65%)
      padding .5em
      overflow-y hidden
    
      &:hover
        cursor pointer
        background-color lightness(lgGray, 115%)
        box-shadow 1px 1px 2px 1px lightness(gGray,75%)
        
      .title
        display inline-block
        white-space nowrap
        overflow hidden
  
.window
  display flex
  box-sizing border-box
  flex-direction column
  position absolute
  // inset 3em
  top 2em
  left 2em
  right 2em
  bottom 8em
  width calc(100% - 4em)
  height calc(100% - 10em)
  min-height 12em
  min-width 12em
  z-index 25
  overflow hidden
  background-color white
  border 1px solid bBlue
  resize both
  font normal normal 16px/24px Arial, sans-serif
  
  &.dragging
    box-shadow 2px 2px 8px 1px gGray
  
  .header
  .body
  .footer
    display flex
    
  .header
  .footer
    padding 1em
    
  .header
    flex 0 1 1em
    flex-direction row
    position relative
    background-color bBlue
    color white
    cursor move
    box-shadow 0px 1px 3px 1px gGray
    
    .title
      flex 1 0 auto
      font-size 1em
      margin 0
      font-weight 300
      max-width calc(100% - 1.5em)
      margin 0
      overflow hidden
      white-space nowrap
    
    .buttons
      flex 0 1 auto
      display flex
      flex-direction row
      gap 5px
      padding 0 0 0 1em
      z-index 2
      
      .close
      .fullscreen
      .minimize
        flex 0 0 0
        cursor pointer
        opacity .75

        &:hover
          opacity 1.0
      
      .fullscreen
        margin-top 3px
        
      .minimize
        margin-top -1px
        
    .drag-target
      background-color white
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 5
      opacity .5
      
  .body
    flex 1 1 auto
    flex-direction column
    overflow-y overlay
    
    p
      display border-box
      padding-bottom 1em
      color gGray
    
  .footer
    flex 0 1 1em
    flex-direction row
    justify-content flex-end
    background-color lgGray
    border-top 1px solid gGray
    font normal normal 10px/14px Arial, sans-serif
    box-shadow inset 0px 0px 3px 1px #999
    
    .status
      flex 1 1 auto
      
.browser
  display flex
  flex-direction column
  width 100%
  height 100%
  
  .address-bar
    flex 0 0 auto
    display flex
    flex-direction row
    gap .25em
    border-bottom 1px solid gGray
    background-color lighten(lgGray, 50%)
    padding .25em
    
    input
      flex 1 1 auto
      border 1px solid lightgray
      padding .5em
      color gGray
    
    .working
      margin-top 3px
      
      &.loading
        animation load 1.4s infinite linear;
    
  iframe
    flex 1 1 auto
    height 100%
    margin 0
    
@keyframes load {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}